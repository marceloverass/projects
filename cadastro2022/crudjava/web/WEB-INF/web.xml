<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletInserir</servlet-name>
        <servlet-class>br.com.bean.ServletInserir</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDeletar</servlet-name>
        <servlet-class>br.com.bean.ServletDeletar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEditar</servlet-name>
        <servlet-class>br.com.bean.ServletEditar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAlterar</servlet-name>
        <servlet-class>br.com.bean.ServletAlterar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletInserir</servlet-name>
        <url-pattern>/inserir.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDeletar</servlet-name>
        <url-pattern>/excluir.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEditar</servlet-name>
        <url-pattern>/editar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAlterar</servlet-name>
        <url-pattern>/alterar.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
